---
import { contentfulClient } from "../lib/contentful";
import { WebsiteDetails } from "../types";

const websiteDetails: WebsiteDetails = await contentfulClient.getEntry<WebsiteDetails>("295uP17ssbHUyTpzVBLmOF");
---

<section id="contact" class="mb-32 text-gray-800 pt-12">
  <div
    class="relative overflow-hidden bg-no-repeat bg-cover z-0"
    style=`background-position: 50%; background-image: url(https:${websiteDetails.fields.contactImage.fields.file.url}); height: 300px;`
  >
  </div>
  <div class="container text-gray-800 mx-auto px-4 md:px-12 z-50">
    <div
      class="block rounded-lg shadow-lg py-10 md:py-12 px-2 md:px-6"
      style="margin-top: -100px; transform: translateZ(-100px); background: hsla(0, 0%, 100%, 0.8); backdrop-filter: blur(30px); -webkit-backdrop-filter: blur(30px);"
    >
      <div class="flex flex-wrap">
        <div class="grow-0 shrink-0 basis-auto w-full xl:w-7/12">
          <div class="flex flex-wrap max-md:mb-10">
            <div class="mb-12 grow-0 shrink-0 basis-auto w-full md:w-6/12 px-3 lg:px-6">
              <div class="flex items-start">
                <div class="shrink-0">
                  <div class="p-4 bg-primary rounded-md shadow-md w-14 h-14 flex items-center justify-center">
                    <svg
                      color="white"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"></path>
                    </svg>
                  </div>
                </div>
                <div class="grow ml-6">
                  <p class="font-bold mb-1">Retail Location</p>
                  <a href="https://goo.gl/maps/T1KqSYk2gZcJSbeaA" target="_blank" rel="noopener noreferrer"
                    ><p class="text-gray-500">695 rt 11</p></a
                  >
                  <a href="https://goo.gl/maps/T1KqSYk2gZcJSbeaA" target="_blank" rel="noopener noreferrer"
                    ><p class="text-gray-500">Farmington, NH 03835</p></a
                  >
                  <p class="text-gray-500">{websiteDetails.fields.retailHours}</p>
                </div>
              </div>
            </div>
            <div class="mb-12 grow-0 shrink-0 basis-auto w-full md:w-6/12 px-3 lg:px-6">
              <div class="flex items-start">
                <div class="shrink-0">
                  <div class="p-4 bg-primary rounded-md shadow-md w-14 h-14 flex items-center justify-center">
                    <svg
                      color="white"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      viewBox="0 0 24 24"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"></path>
                    </svg>
                  </div>
                </div>
                <div class="grow ml-6">
                  <p class="font-bold mb-1">Wholesale Location</p>
                  <a href="https://goo.gl/maps/qwWUV5ajHnD2jxNE9" target="_blank" rel="noopener noreferrer"
                    ><p class="text-gray-500">450 Muchado Hill Rd</p></a
                  >
                  <a href="https://goo.gl/maps/qwWUV5ajHnD2jxNE9" target="_blank" rel="noopener noreferrer"
                    ><p class="text-gray-500">Alton, NH 03809</p></a
                  >
                  <p class="text-gray-500">{websiteDetails.fields.wholesaleHours}</p>
                </div>
              </div>
            </div>
            <div class="mb-12 md:mb-0 grow-0 shrink-0 basis-auto w-full md:w-6/12 px-3 lg:px-6">
              <div class="flex align-start">
                <div class="shrink-0">
                  <div class="p-4 bg-primary rounded-md shadow-md w-14 h-14 flex items-center justify-center">
                    <svg
                      color="white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path
                        clip-rule="evenodd"
                        fill-rule="evenodd"
                        d="M2 3.5A1.5 1.5 0 013.5 2h1.148a1.5 1.5 0 011.465 1.175l.716 3.223a1.5 1.5 0 01-1.052 1.767l-.933.267c-.41.117-.643.555-.48.95a11.542 11.542 0 006.254 6.254c.395.163.833-.07.95-.48l.267-.933a1.5 1.5 0 011.767-1.052l3.223.716A1.5 1.5 0 0118 15.352V16.5a1.5 1.5 0 01-1.5 1.5H15c-1.149 0-2.263-.15-3.326-.43A13.022 13.022 0 012.43 8.326 13.019 13.019 0 012 5V3.5z"
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class="grow ml-6">
                  <p class="font-bold mb-1">Phone</p>
                  <a href=`tel:${websiteDetails.fields.phone}`
                    ><p class="text-gray-500 break-all">{websiteDetails.fields.phone}</p></a
                  >
                </div>
              </div>
            </div>
            <div class="grow-0 shrink-0 basis-auto w-full md:w-6/12 px-3 lg:px-6">
              <div class="flex align-start">
                <div class="shrink-0">
                  <div class="p-4 bg-primary rounded-md shadow-md w-14 h-14 flex items-center justify-center">
                    <svg
                      color="white"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z"
                      ></path>
                      <path d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z"
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class="grow ml-6">
                  <p class="font-bold mb-1">Email</p>
                  <a href=`mailto:${websiteDetails.fields.email}?subject=Question`
                    ><p class="text-gray-500 break-all">{websiteDetails.fields.email}</p></a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="grow-0 shrink-0 basis-auto w-full xl:w-5/12 px-3 lg:px-6 mb-12 xl:mb-0">
          <form name="contact" method="POST" data-netlify="true">
            <div class="form-group mb-6">
              <label>
                <input
                  type="text"
                  class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                  id="name"
                  placeholder="Name"
                />
              </label>
            </div>
            <div class="form-group mb-6">
              <label>
                <input
                  type="email"
                  class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                  id="email"
                  placeholder="Email address"
                />
              </label>
            </div>
            <div class="form-group mb-6">
              <label>
                <textarea
                  class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                  id="message"
                  rows="3"
                  placeholder="Message"></textarea>
              </label>
            </div>
            <button
              type="submit"
              class="w-full px-6 py-2.5 bg-primary text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-secondary hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
              >Send</button
            >
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
